---
import BaseHead from "../components/BaseHead.astro"
---
<!DOCTYPE html>
<html lang="en">
<head>
	<BaseHead title="HPC | HackClub Pune" description="Idk"/>
	<style>
		.container{
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			height: 100vh;
			background: #FEAC5E; 
background: -webkit-linear-gradient(to left, #FEAC5E, #C779D0,#4bc0c8); 
background: linear-gradient(to left, #FEAC5E, #C779D0,#4bc0c8); 
		}
		.text{
			text-align: center;
			color: white;
			padding: 10%;
			/* border: 3px solid black; */
			background: rgba(0, 0, 0, 0.27);
border-radius: 16px;
box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
backdrop-filter: blur(6.6px);
-webkit-backdrop-filter: blur(6.6px);
border: 1px solid rgba(0, 0, 0, 0.44);

		}
		h1{
			/* font-size: 5vw; */
			font-size: 72px;
  background: -webkit-linear-gradient( #8FFF85, #39A0FF);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
		}
		p{
			font-size: 2vw;
		}
	</style>
</head>
<body>
	<div class="container">
		<div class="text">
			<h1>HPC</h1>
			<p>Coming soon</p>
		</div>
	</div>
</body>
</html>