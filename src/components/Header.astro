---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---
<style>
	header {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	h1 {
		margin: 0;
		font-size: 2em;
	}
</style>
<header>
<h1>{SITE_TITLE}</h1>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="https://twitter.com/" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/Hrushal-Nikhare" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>